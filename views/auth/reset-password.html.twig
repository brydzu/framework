{% extends "base.html.twig" %}

{% set title = 'Reset password' %}

{% block content %}
<div class="user-header">
    <img class="img-circle pull-left" src="{{ person.image.url('140x190-crop')|default('/img/' ~ person.gender|default('male')~'-circle-50.png') }}">
    <h1>{{ person }}</h1>
</div>

<h2 class="modal-title">Enter a new password</h2>

<form id="reset-password" action="/reset-password/{{ hash }}" class="row" method="post">
    <div class="col-md-5">
        <input type="hidden" name="email" value="{{ person.email }}">
        <div class="form-group">
            <input class="form-control input-lg pwstrength" name="password" placeholder="Password" type="password" required pattern=".{6,}" title="6 characters minimum"/>
        </div>
        <div class="form-group">
            <input class="form-control input-lg" name="password-confirm" placeholder="Confirm password" type="password" required pattern=".{6,}" title="6 characters minimum"/>
        </div>
        <button class="btn btn-lg btn-success btn-block btn-center" type="submit">Submit</button>
    </div>
</form>
{% endblock %}
